if [ $# -gt 0 ]; then
  name=$1
else
  echo "Add filename as argument"
  exit 1
fi

cat $name | \
  sed --unbuffered -E "s/([A-Z]+):(\/[^\/]+)+\/([kh]pp[-/][a-z-]+)\/[^:]+:([0-9]+:)?/\1:\3:/" \
  | highlight --style=darkness --out-format=xterm256 --syntax=log
